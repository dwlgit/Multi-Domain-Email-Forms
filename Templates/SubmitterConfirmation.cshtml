@model DigitalWonderlab.MultiDomainEmail.Models.EmailTemplateModel

<!DOCTYPE html>
<html>
<head>
    <meta charset='utf-8'>
    <title>Thank You</title>
</head>
<body style='font-family: Arial, sans-serif; line-height: 1.6; color: #333; max-width: 600px; margin: 0 auto; padding: 20px;'>

    <h2 style='color: #27ae60;'>Thank you for your submission!</h2>
    <p>We have received your message and will get back to you as soon as possible.</p>

    <h3 style='color: #2c3e50; margin-top: 30px;'>Your submission details:</h3>
    <table style='width: 100%; border-collapse: collapse; background-color: #f8f9fa; border-radius: 5px;'>
        @foreach (var field in Model.Fields)
        {
            if (!string.IsNullOrWhiteSpace(field.Value))
            {
                <tr>
                    <td style='font-weight: bold; padding: 8px; width: 30%;'>@field.Name:</td>
                    <td style='padding: 8px;'>@field.Value</td>
                </tr>
            }
        }
    </table>

    <p style='margin-top: 20px; color: #7f8c8d;'>
        Best regards,<br />
        The Team
    </p>

</body>
</html>